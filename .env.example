## Correo (Gmail) — usa App Password
GMAIL_USER=your_gmail@example.com
GMAIL_PASS=your_app_password

## Base de datos PostgreSQL
PGHOST=localhost
PGPORT=5432
PGDATABASE=umg_frontend
PGUSER=umg_user
PGPASSWORD=change_me
# (opcional) PGSSLMODE=disable  # en local no suele hacer falta

## Servidor / CORS
PORT=4000
CLIENT_ORIGIN=http://localhost:3000

## JWT (tokens)
JWT_SECRET=change_me_jwt_secret
# Nota: JWT_EXPIRES_IN NO es leído por el código actual.
# En su lugar puedes definir (opcional) los tiempos de acceso/refresh así:
# JWT_ACCESS_EXPIRES_IN=15m
# JWT_REFRESH_EXPIRES_IN=7d
JWT_EXPIRES_IN=1h

## Política de inscripciones
# Máximo de inscripciones concurrentes por estudiante.
# Cambia a 2 para permitir que un estudiante sea aprobado en hasta dos talleres a la vez.
MAX_CONCURRENT_ENROLLMENTS=1
